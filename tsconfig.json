{
    "compilerOptions": {
        "strict": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "Bundler",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "module": "ES2022",
            "moduleResolution": "Node16"
        }
    }
}
