{
    "name": "exchange-currency",
    "version": "1.0.0",
    "description": "exchange currency for web development",
    "type": "module",
    "keywords": [
        "nodejs",
        "npm",
        "vue",
        "eslint",
        "stylelint"
    ],
    "author": {
        "name": "Emil"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build ",
        "preview": "vite preview",
        "format": "prettier --write .",
        "lint:format": "prettier --cache --check .",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ext .vue,.ts,.tsx,.jsx,.cjs,.mjs,.json,.yml,.yaml --report-unused-disable-directives --max-warnings 0 .",
        "lint:style": "stylelint --max-warnings 0 --ignore-path .gitignore \"**/*.{css,scss,vue,vuex}\"",
        "lint:test": "concurrently \"npm run tsc:check\" \"npm run lint\" \"npm run lint:format\" \"npm run lint:style\"",
        "tsc:check": "tsc --noEmit",
        "test": "vitest",
        "update": "npx npm-check-updates"
    },
    "dependencies": {
        "vue": "3.4.37",
        "vue-router": "^4.4.3"
    },
    "devDependencies": {
        "@rushstack/eslint-patch": "^1.10.4",
        "@types/node": "^22.1.0",
        "@typescript-eslint/parser": "^8.0.1",
        "@vitejs/plugin-vue": "^5.1.2",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/test-utils": "^2.4.6",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-boundaries": "^4.2.2",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.27.0",
        "happy-dom": "^15.7.3",
        "prettier": "^3.3.3",
        "sass-embedded": "^1.77.8",
        "stylelint": "^16.8.1",
        "stylelint-config-css-modules": "^4.4.0",
        "stylelint-config-recess-order": "^5.0.1",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-config-standard-scss": "^13.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "vite": "^5.4.0",
        "vite-plugin-checker": "^0.7.2",
        "vitest": "^2.0.5",
        "vue-tsc": "^2.0.29"
    }
}
